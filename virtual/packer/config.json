{
    "provisioners": [
        {
            "type": "shell",
	    "environment_vars": ["BCC_APT_KEY_URL={{user `bcc_apt_key_url`}}",
				 "BCC_APT_URL={{user `bcc_apt_url`}}",
				 "KERNEL_VERSION={{user `kernel_version`}}"],
	    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
	    "script": "./packer_box_provision.sh"
        }
    ],
    "builders": [
        {
            "communicator": "ssh",
            "source_path": "{{user `base_box`}}",
            "provider": "{{user `base_box_provider`}}",
            "add_force": true,
            "type": "vagrant"
        }
    ]
}
